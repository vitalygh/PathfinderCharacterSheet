<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PathfinderCharacterSheet.NewCharacter"
             Title="Edit Character">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Enter character name:"></Label>
                <Entry x:Name="CharacterName"></Entry>
                <StackLayout Orientation="Horizontal">
                    <Button Text="Save" x:Name="Save" Clicked="Save_Clicked" HorizontalOptions="FillAndExpand"></Button>
                    <Button Text="Cancel" x:Name="Cancel" Clicked="Cancel_Clicked" HorizontalOptions="FillAndExpand"></Button>
                    <!--
                    <Button Text="Delete" x:Name="Delete" Clicked="Delete_Clicked" HorizontalOptions="FillAndExpand"></Button>
                    -->
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>