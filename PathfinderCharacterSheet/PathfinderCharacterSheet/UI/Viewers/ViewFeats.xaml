<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PathfinderCharacterSheet.ViewFeats"
             Title="Feats">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout Orientation="Horizontal" BackgroundColor="LightGray">
                    <Button x:Name="Reorder" Text="Reorder" FontSize="Medium" TextColor="Black" Clicked="Reorder_Clicked">
                    </Button>
                    <Label x:Name="ItemsTitle" Text="Feats" FontSize="Medium" TextColor="Black" VerticalOptions="Center" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center">
                    </Label>
                    <Button x:Name="AddItem" Text="Add" FontSize="Medium" TextColor="Black" Clicked="AddItem_Clicked">
                    </Button>
                </StackLayout>
                <StackLayout x:Name="Items">
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>