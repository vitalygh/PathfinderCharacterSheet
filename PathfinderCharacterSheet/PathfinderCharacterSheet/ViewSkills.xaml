                <StackLayout Orientation="Horizontal" BackgroundColor="LightGray">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                            <CheckBox IsChecked="True" VerticalOptions="Center" HorizontalOptions="Fill"></CheckBox>
                            <Label x:Name="ClassSkillsTitle" Text="Class Skill" FontSize="Medium" TextColor="Black" VerticalOptions="Center" HorizontalOptions="Fill" HorizontalTextAlignment="Center"></Label>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                        <Label x:Name="TrainedOnlyTitle" Text="* Trained Only" FontSize="Medium" TextColor="Black" VerticalOptions="Center" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center"></Label>
                    </StackLayout>
                </StackLayout>
                <StackLayout BackgroundColor="LightGray">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="2" Tapped="Languages_DoubleTapped">
                        </TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>
                    <Label x:Name="LanguagesTitle" Text="Languages: " FontSize="Medium" TextColor="Black" VerticalOptions="Center" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center"></Label>
                    <Frame BorderColor="Black" Padding="5">
